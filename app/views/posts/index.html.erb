
<div class = "posts-wrapper row">

 <% @posts.each do |post| %>
  <div class = "post">
   <div class = "post-head clearfix">
    <div class = "name">
       Lê Duy Khánh
    </div>
    <div class = "image center-block">
      <%=link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post)  %>
    </div>
   </div>
  <p class = "caption">
   <%= post.caption %>
  </p>
  </div>
 <% end %>

</div>
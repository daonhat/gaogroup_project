<div class = "posts-wrapper row">
    <div class = "post">
        <div class = "post-head">
            <div class = "name">
                 <%= @post.user.user_name %>
            </div>
        </div>
        <div class = "image center-block">
            <%= image_tag @post.image.url(:medium), class:'img-responsive' %>
        </div>
        <p class = "caption">
            <%= @post.caption %>
        </p>
        <p class = "caption">
            <%= render @post.tags %>
        </p>
        <% if @post.user.id == current_user.id %>
        <div class = "text-center">
            <%= link_to "Cancel", posts_path, class: 'btn dn-btn-cancel' %>
            
            <%= link_to "Edit Post", edit_post_path(@post),  class: 'btn btn-primary dn-btn-edit'  %>
        </div>
        <% else %>
        <div class = "text-center">
            <%= link_to "Back", posts_path, class: 'btn dn-btn-cancel' %>
        </div>
        <% end %>
    </div>
    
</div>